<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90" android:type="linear"></gradient>
                    <solid android:color="@color/white"></solid>
                    <corners android:radius="5dp"></corners>
                    <stroke android:color="#4A4A4A" android:width="1dp"></stroke>
                    <size android:height="40dp"></size>
                    <padding
                        android:bottom="7.0dip"
                        android:left="9.0dip"
                        android:right="9.0dip"
                        android:top="7.0dip" ></padding>
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center|right" android:src="@drawable/dropdown"></bitmap>
            </item>
        </layer-list>
    </item>
</selector>
