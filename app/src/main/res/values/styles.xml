<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/blue_shade1</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/blue_shade1</item>
    </style>
    <!-- tolbar text color-->
    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/blue_shade1</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <!--otp text style-->
    <style name="otp_et_style" parent="Theme.AppCompat.Light">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>
<style name="radioButtonTab">
    <item name="android:background">@drawable/tab_selector</item>
    <item name="android:button">@null</item>
    <item name="android:gravity">center</item>
    <item name="android:checked">false</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_marginRight">1dp</item>
    <item name="android:padding">10dp</item>
    <item name="android:textColor">@drawable/tab_text_selector</item>
</style>
    <style name="TabTextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="slogan_about_us">
        <item name="android:gravity">center|top</item>
       <item name="android:textAllCaps">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/blue_shade4</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">2dp</item>
    </style>

</resources>
