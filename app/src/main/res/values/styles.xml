<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/blue_shade1</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/blue_shade1</item>
    </style>
    <!-- tolbar text color-->
    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/blue_shade2</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <!--otp text style-->
    <style name="otp_et_style" parent="Theme.AppCompat.Light">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="radioButtonTab">
        <item name="android:background">@drawable/tab_selector</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:checked">false</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@drawable/tab_text_selector</item>
    </style>

    <style name="TabTextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="slogan_about_us">
        <item name="android:gravity">center|top</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/blue_shade4</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">2dp</item>
    </style>
    <!-- enquiry form text view style-->
    <style name="EnqFormTxtViewStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/black_shade2</item>
        <item name="android:paddingBottom">3dp</item>
    </style>
    <!--enquiry form edit text style-->
    <style name="EnqFormEditTxtStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/black_shade2</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:background">@drawable/edit_txt_border</item>
        <item name="android:textCursorDrawable">@drawable/et_cursor_color_gray</item>
    </style>

    <style name="GrainVerityStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/black_shade2</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:background">@drawable/edit_txt_border</item>
        <item name="android:textCursorDrawable">@drawable/et_cursor_color_gray</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="radiobtn_e_process">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_shade2</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:buttonTint">@color/black_shade2</item>
    </style>
    <style name="radiobtn_model_dryer">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_shade2</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:buttonTint">@color/black_shade2</item>
    </style>

    <style name="radiobtn_r_process_title">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black_shade2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="dryer_title">
        <item name="android:textColor">@color/black_shade2</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="dryer_hydrtn_title">
        <item name="android:textColor">@color/blue_shade6</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="dryer_method_title">
        <item name="android:textColor">@color/blue_shade2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="dryer_textView">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/black_shade2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="dryer_editText">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/black_shade2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:background">@drawable/edit_txt_border</item>
        <item name="android:textCursorDrawable">@drawable/et_cursor_color_gray</item>
    </style>

    <style name="toolbar_title">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="after_process_2c">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:gravity">center</item>

    </style>
    <style name="cust_list">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
    <style name="MyThemeOverlay">
        <item name="android:colorAccent">@color/blue_shade2</item>
    </style>
    <style name="LeftNavTheme" parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_shade2</item>
        <item name="listPreferredItemHeightSmall">45dp</item>
        <item name="android:colorAccent">@color/blue_shade2</item>
    </style>

    <style name="yeild_2nd_col">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/black_shade2</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:inputType">textCapWords</item>
    </style>
    <style name="yeild_1st_col">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/black_shade2</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="notifi_detail_title">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/blue_shade2</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:inputType">textCapWords</item>
    </style>

</resources>
