<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_lr2"
            android:paddingTop="8dp"
            android:paddingRight="@dimen/padding_lr2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_medium"
                android:paddingBottom="3dp"
                android:text="@string/broken"
                android:textAllCaps="true"
                android:textColor="@color/blue_shade2"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_lr2"
            android:paddingRight="@dimen/padding_lr2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/tvDeHusker1"
                    style="@style/yeild_1st_col"
                    android:layout_weight="1"
                    android:text="@string/de_husker" />

                <TextView
                    android:id="@+id/tvDeHuskerQty"
                    style="@style/yeild_2nd_col"
                    android:layout_weight="1"
                    android:gravity=""
                    android:text="70kg" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_lr2"
            android:paddingRight="@dimen/padding_lr2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/tvPolisher1"
                    style="@style/yeild_1st_col"
                    android:layout_weight="1"
                    android:text="@string/polisher_1" />

                <TextView
                    android:id="@+id/tvPolisher1Qty"
                    style="@style/yeild_2nd_col"
                    android:layout_weight="1"
                    android:gravity=""
                    android:text="40kg" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_lr2"
            android:paddingRight="@dimen/padding_lr2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/tvPolisher2"
                    style="@style/yeild_1st_col"
                    android:layout_weight="1"
                    android:text="@string/polisher_2" />

                <TextView
                    android:id="@+id/tvPolisher2Qty"
                    style="@style/yeild_2nd_col"
                    android:layout_weight="1"
                    android:gravity=""
                    android:text="90kg" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_lr2"
            android:paddingRight="@dimen/padding_lr2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/tvPolisher3"
                    style="@style/yeild_1st_col"
                    android:layout_weight="1"
                    android:text="@string/polisher_3" />

                <TextView
                    android:id="@+id/tvPolisher3Qty"
                    style="@style/yeild_2nd_col"
                    android:layout_weight="1"
                    android:gravity=""
                    android:text="56kg" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_lr2"
            android:paddingRight="@dimen/padding_lr2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/tvPolisher4"
                    style="@style/yeild_1st_col"
                    android:layout_weight="1"
                    android:text="@string/polisher_4" />

                <TextView
                    android:id="@+id/tvPolisher4Qty"
                    style="@style/yeild_2nd_col"
                    android:layout_weight="1"
                    android:gravity=""
                    android:text="40kg" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_lr2"
            android:paddingRight="@dimen/padding_lr2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/tvPolisher5"
                    style="@style/yeild_1st_col"
                    android:layout_weight="1"
                    android:text="@string/polisher_5" />

                <TextView
                    android:id="@+id/tvPolisher5Qty"
                    style="@style/yeild_2nd_col"
                    android:layout_weight="1"
                    android:gravity=""
                    android:text="80kg" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_lr2"
            android:paddingRight="@dimen/padding_lr2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/tvPolisher6"
                    style="@style/yeild_1st_col"
                    android:layout_weight="1"
                    android:text="@string/polisher_6" />

                <TextView
                    android:id="@+id/tvPolisher6Qty"
                    style="@style/yeild_2nd_col"
                    android:layout_weight="1"
                    android:gravity=""
                    android:text="40kg" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_lr2"
            android:paddingRight="@dimen/padding_lr2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/tvGrader"
                    style="@style/yeild_1st_col"
                    android:layout_weight="1"
                    android:text="@string/grader" />

                <TextView
                    android:id="@+id/tvGraderQty"
                    style="@style/yeild_2nd_col"
                    android:layout_weight="1"
                    android:gravity=""
                    android:text="25kg" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_lr2"
            android:paddingRight="@dimen/padding_lr2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/tvSorter"
                    style="@style/yeild_1st_col"
                    android:layout_weight="1"
                    android:text="@string/sorter" />

                <TextView
                    android:id="@+id/tvSorterQty"
                    style="@style/yeild_2nd_col"
                    android:layout_weight="1"
                    android:gravity=""
                    android:text="30kg" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_lr2"
            android:paddingTop="20dp"
            android:paddingRight="@dimen/padding_lr2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_medium"
                android:paddingBottom="3dp"
                android:text="@string/head"
                android:textAllCaps="true"
                android:textColor="@color/blue_shade2"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_lr2"
            android:paddingRight="@dimen/padding_lr2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/tvGraderHeadRice"
                    style="@style/yeild_1st_col"
                    android:layout_weight="1"
                    android:text="@string/grader" />

                <TextView
                    android:id="@+id/tvGraderHeadRiceQty"
                    style="@style/yeild_2nd_col"
                    android:layout_weight="1"
                    android:gravity=""
                    android:text="45kg" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_lr2"
            android:paddingRight="@dimen/padding_lr2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/tvSorterHeadRice"
                    style="@style/yeild_1st_col"
                    android:layout_weight="1"
                    android:text="@string/sorter" />

                <TextView
                    android:id="@+id/tvSorterHeadRiceQty"
                    style="@style/yeild_2nd_col"
                    android:layout_weight="1"
                    android:gravity=""
                    android:text="87kg" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_lr2"
            android:paddingTop="20dp"
            android:paddingRight="@dimen/padding_lr2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_medium"
                android:paddingBottom="3dp"
                android:text="@string/total_percentage"
                android:textAllCaps="true"
                android:textColor="@color/blue_shade2"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_medium"
                android:paddingBottom="3dp"
                android:text="87%"
                android:textAllCaps="true"
                android:textColor="@color/blue_shade2"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_lr2"
            android:paddingTop="40dp"
            android:paddingRight="@dimen/padding_lr2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_medium"
                android:paddingBottom="3dp"
                android:text="@string/graph"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/blue_shade2"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_lr2"
            android:paddingTop="40dp"
            android:paddingRight="@dimen/padding_lr2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp">

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChart"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>