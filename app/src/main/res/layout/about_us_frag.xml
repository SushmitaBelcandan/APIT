<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/rice_mill" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingRight="15dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="@drawable/yellow_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:paddingTop="10dp"
                        android:paddingBottom="3dp"
                        android:src="@drawable/icon_about" />

                    <TextView
                        style="@style/slogan_about_us"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:text="who we are" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/yellow_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:paddingTop="5dp"
                        android:paddingBottom="0dp"
                        android:src="@drawable/icon_philosophy" />

                    <TextView
                        style="@style/slogan_about_us"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:text="our philosophy" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="@drawable/yellow_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:paddingTop="5dp"
                        android:paddingBottom="3dp"
                        android:src="@drawable/icon_expert" />

                    <TextView
                        style="@style/slogan_about_us"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:text="you want expert" />
                </LinearLayout>
            </LinearLayout>

            <WebView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="@dimen/margin_lr"
                android:layout_marginTop="@dimen/margin_tb"
                android:layout_marginRight="@dimen/margin_lr"
                android:layout_marginBottom="@dimen/margin_tb"></WebView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/margin_lr"
                android:layout_marginLeft="@dimen/margin_lr"
                android:layout_marginTop="@dimen/margin_tb">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textColor="@color/blue_shade4"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_medium" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BTM 1st stage , maruthi nagar,bangalore,karnataka,560029"
                    android:justificationMode="inter_word"
                    android:textSize="14sp"
                    android:textColor="@color/black_shade2"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/margin_lr"
                android:layout_marginLeft="@dimen/margin_lr">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone: "
                    android:textColor="@color/blue_shade4"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_medium" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="90789 98069 / +91 234699 7890"
                    android:justificationMode="inter_word"
                    android:textSize="14sp"
                    android:textColor="@color/blue_shade4"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/margin_lr"
                android:layout_marginLeft="@dimen/margin_lr">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email ID: "
                    android:textColor="@color/blue_shade4"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_medium" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="mail@api.co.in"
                    android:justificationMode="inter_word"
                    android:textSize="14sp"
                    android:textColor="@color/blue_shade4"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/margin_lr"
                android:layout_marginLeft="@dimen/margin_lr">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Website: "
                    android:textColor="@color/blue_shade4"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_medium" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="www.api.co.in"
                    android:justificationMode="inter_word"
                    android:textSize="14sp"
                    android:textColor="@color/blue_shade4"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>